@page
@model FavoriteShows.Pages.FavoriteShowsModel
@{
    ViewData["Title"] = "Favorite Shows";
}

<!-- Main page heading -->
<h1>Favorite Shows</h1>

<!-- Form that submits shows selection via POST method -->
<form method="post">
    <!-- Dropdown list that binds to the SelectedShowsId property and populates options from Model.ShowsList -->
    <select asp-for="SelectedShowsId" asp-items="Model.ShowsList" class="form-control">
        <!-- Default option when no show is selected -->
        <option value="">Select a Show</option>
    </select>
    <!-- Submit button to send the form and show the selected shows details -->
    <button type="submit" class="btn btn-primary mt-2">Display Show Details</button>
</form>

<!-- Conditional section that only displays when a show is selected -->
@if (Model.SelectedShows != null)
{
    <!-- Container for shows details with top margin spacing -->
    <div class="mt-4">
        <!-- Display the selected shows title as a heading -->
        <h2>@Model.SelectedShows.Title</h2>
        <!-- Display the show's release year -->
        <p>@Model.SelectedShows.ReleaseYear</p>
        <!-- Display the show's genre -->
        <p>Price: $@Model.SelectedShows.Genre</p>
        <!-- Display the show's image with a maximum width and alt text for accessibility -->
        <img src="/images/@Model.SelectedShows.ImageFileName" alt="@Model.SelectedShows.Title" style="max-width: 300px;" />
    </div>
}